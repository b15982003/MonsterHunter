<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/black_3f3a3a</item>
    </style>

    <style name="ProgressTheme" parent="Widget.AppCompat.ProgressBar">
        <item name="colorAccent">@color/black_3f3a3a</item>
    </style>

    <style name="drawer_heater">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <!-- Base application theme. -->
    <style name="post_dailog">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="post_dailog_choose_time">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="DialogPost">
        <item name="android:windowBackground">@color/translucent_80</item>
    </style>

    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/entertext</item>
        <item name="boxStrokeWidth">2dp</item>
    </style>

    <!-- Home -->
    <style name="home_data_title">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="home_data_text">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="home_data_button">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="home_activity">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/home_type_background</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Google signIn -->
    <style name="google_signIn_Terms">
        <item name="android:textSize">10sp</item>
        <item name="fontFamily">@font/noto_sans</item>
    </style>

    <!-- Dialog Post -->
    <style name="post_dailod_profileName">
        <item name="android:textSize">30sp</item>
        <item name="fontFamily">@font/noto_sans</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/post_dialog_personName</item>
    </style>


    <!-- ChatRoom -->
    <style name="chatRoom_data_title">
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="chatRoom_data_text">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="chatRoom_post_button">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>
