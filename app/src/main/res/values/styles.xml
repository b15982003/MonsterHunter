<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>
    </style>

    <style name="ProgressTheme" parent="Widget.AppCompat.ProgressBar">
        <item name="colorAccent">@color/colorPrimaryDark</item>
    </style>

    <style name="drawer_heater">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <!-- Base application theme. -->
    <style name="post_dailog">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="post_dailog_choose_time">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="DialogPost">
        <item name="android:windowBackground">@color/translucent_80</item>
    </style>

    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/entertext</item>
        <item name="boxStrokeWidth">2dp</item>
    </style>

    <!-- Home -->
    <style name="home_data_title">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="home_data_text">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="home_data_button">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="home_activity">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/home_type_background</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Google signIn -->
    <style name="google_signIn_Terms">
        <item name="android:textSize">10sp</item>
        <item name="fontFamily">@font/noto_sans</item>
    </style>

    <!-- Dialog Post -->
    <style name="post_dailod_profileName">
        <item name="android:textSize">30sp</item>
        <item name="fontFamily">@font/noto_sans</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/post_dialog_personName</item>
    </style>


    <!-- ChatRoom -->
    <style name="chatRoom_data_title">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="chatRoom_data_text">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="chatRoom_post_button">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Profile -->
    <style name="profile_heater_text">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/gray_646464</item>
    </style>

    <style name="profile_all_crawling_text">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/gray_646464</item>
    </style>

    <style name="profile_ratingBar_god">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/gray_646464</item>
    </style>

    <!-- chatRoomDetail -->
    <style name="chatRoom_Detail_userId">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/orange_8b572a</item>
    </style>

    <style name="chatRoom_Detail_message">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black_3f3a3a</item>
    </style>

    <style name="chatRoom_Detail_createTime">
        <item name="android:textSize">8sp</item>
        <item name="android:textColor">@color/gray_cccccc</item>
    </style>

    <style name="chatRoom_Detail_toolbar_text">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="chatRoom_Detail_start_button">
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="chatRoom_Detail_secNumber">
        <item name="android:textSize">80sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- chatRoomScore -->
    <style name="chatRoom_score_name">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="chatRoom_score_title">
        <item name="android:textSize">50sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/orange_8b572a</item>
    </style>

    <style name="chatRoom_score_sent_button">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/entertext</item>
    </style>

    <!-- friend List -->
    <style name="friend_list_userName">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/post_dialog_personName</item>
    </style>

    <style name="RatingBar">
        <item name="colorControlActivated">@color/profile_rating</item>
    </style>

    <!-- history List -->
    <style name="history_list_createTime">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/gray_646464</item>
    </style>

    <style name="history_list_no_value_text">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#87000000</item>
    </style>

    <style name="history_user_text">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="history_user_arms">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

</resources>
